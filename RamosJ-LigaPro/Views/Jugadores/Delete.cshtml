@model RamosJ_LigaPro.Models.Jugador
@{
    ViewData["Title"] = "Eliminar Jugador";
}

<h2>Eliminar Jugador</h2>

<h4>¿Estás seguro que deseas eliminar a este jugador?</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">Nombre</dt>
    <dd class="col-sm-10">@Model.Nombre</dd>

    <dt class="col-sm-2">Dorsal</dt>
    <dd class="col-sm-10">@Model.Dorsal</dd>

    <dt class="col-sm-2">Sueldo</dt>
    <dd class="col-sm-10">$@Model.Sueldo</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
